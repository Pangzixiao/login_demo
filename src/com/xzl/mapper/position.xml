<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    一个mapper 代表一个持久层对象， namespace指向对应的接口
-->
<mapper namespace="com.xzl.dao.PositionDao">
    <insert id="newPosition" >
        insert into t_position (p_name,company_id,p_type1,p_type2,p_type3,p_address,salary,required_work,p_descript,p_request,treatment,apply_count)values
        (#{p_name},#{company_id},#{p_type1},#{p_type2},#{p_type3},#{p_address},#{salary},#{required_work},#{p_descript},#{p_request},#{treatment},#{apply_count})
    </insert>

    <update id="updatePosition">
        update t_position set p_name=#{p_name},company_id=#{company_id},p_type1=#{p_type1},p_type2=#{p_type2},p_type3=#{p_type3},p_address=#{p_address}
        ,salary=#{salary},required_work=#{required_work},p_descript=#{p_descript},p_request=#{p_request},treatment=#{treatment},apply_count=#{apply_count} where position_id = #{position_id}
    </update>
